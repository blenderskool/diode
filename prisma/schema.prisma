// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id       String     @id @default(uuid())
  name     String
  ApiRoute ApiRoute[]
  Secret   Secret[]
  Monitor  Monitor[]
}

enum ApiMethod {
  GET
  POST
  PUT
  DELETE
}

model ApiRoute {
  id                 String    @id
  name               String
  apiUrl             String
  method             ApiMethod
  queryParams        Json      @default("[]")
  headers            Json      @default("[]")
  projectId          String
  project            Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  forwardRequestData Boolean   @default(true)

  // Restriction middleware config
  restriction Json @default("{}")

  // Rate Limiting middleware config
  rateLimiting Json @default("{}")

  // Caching middleware config
  caching Json @default("{}")

  // Analytics
  successes     Int @default(0)
  fails         Int @default(0)
  avgResponseMs Int @default(0)

  // Partial JSON query middleware config
  partialQuery Json @default("{}")
}

model Secret {
  secret    String
  name      String
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([projectId, name])
}

model Monitor {
  id          String @id @default(uuid())
  name        String
  description String @default("")
  apiUrl      String
  queryParams Json   @default("[]")
  headers     Json   @default("[]")
  frequency   String @default("")

  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  MonitorLog MonitorLog[]
}

model MonitorLog {
  id           String   @id @default(uuid())
  status       Int
  responseTime Int
  createdAt    DateTime @default(now())

  monitorId String
  monitor   Monitor @relation(fields: [monitorId], references: [id], onDelete: Cascade)

  @@index([monitorId])
}
