// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id       String     @id @default(uuid())
  name     String
  ApiRoute ApiRoute[]
  Secret   Secret[]
}

enum ApiMethod {
  GET
  POST
  PUT
  DELETE
}

model ApiRoute {
  id          String    @id
  name        String
  apiUrl      String
  method      ApiMethod
  queryParams Json
  headers     Json
  projectId   String
  project     Project   @relation(fields: [projectId], references: [id])

  // Rate Limiting middleware config
  rateLimiting Json
}

model Secret {
  secret    String
  name      String
  projectId String
  project   Project @relation(fields: [projectId], references: [id])

  @@unique([projectId, name])
}
